<com.pockettimer.view.CircleWithTextView
    android:id="@+id/custView"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:layout_margin="40dp"
    custom:circleColor="@color/Primary"
    custom:circleLabel="@string/button_newWorkout"
    android:onClick="startNewWorkout"
    custom:labelColor="@color/grey"
    android:layout_gravity="center"
    android:layout_weight="1" />

