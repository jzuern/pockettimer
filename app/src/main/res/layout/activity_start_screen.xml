        custom:circleColor="@color/white_dark"
        custom:circleLabel="@string/button_loadWorkout"
        android:onClick="loadWorkout"
        custom:labelColor="@color/grey"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_weight="1" />

<com.pockettimer.view.CircleWithTextView
    android:id="@+id/custView2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    custom:circleColor="@color/Primary"
    custom:circleLabel="@string/button_loadWorkout"
    android:onClick="loadWorkout"
    custom:labelColor="@color/grey"
    android:layout_gravity="bottom|center_horizontal"
    android:layout_weight="1" />
</RelativeLayout>

<RelativeLayout
